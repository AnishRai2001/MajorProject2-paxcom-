server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      routes:
        # ✅ Route to User Service
        - id: JWTSERVICE
          uri: lb://jwtService
          predicates:
            - Path=/api/users/**
          filters:
            - JwtAuthFilter

        # ✅ Route to Doctor Service
        - id: DOCTORSERVICE
          uri: lb://doctor-service
          predicates:
            - Path=/api/doctors/**
          filters:
            - JwtAuthFilter

      default-filters:
        - DedupeResponseHeader=Access-Control-Allow-Origin Access-Control-Allow-Credentials

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/
